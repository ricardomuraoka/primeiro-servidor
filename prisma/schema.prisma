// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

//Models
model User {
  id          String    @id @default(uuid())
  username    String    @unique
  password    String
  name        String    @default("")
  roles       Role[]
}

model Role {
  name        String    @id
  users       User[]
}


model Establishments {
  id          String    @id @default(uuid())
  name        String    @unique
  style       String
  verified    Boolean
  rating      Float
  comments    String
}

