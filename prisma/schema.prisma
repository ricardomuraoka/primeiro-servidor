// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

//Models
model User {
  id          String    @id @default(uuid())
  username    String    @unique
  password    String
  name        String    @default("")
  roles       Role[]
}

model Role {
  name        String    @id
  users       User[]
}


model Establishments {
  id              String    @id @default(uuid())
  name            String
  style           String
  verified        Boolean   @default(false)
  rating          Float
  comments        String
  comment_at      DateTime
  email           String
  phone           String
  address         String
  city            String
  state           String
  zip             String
  website         String
  open_monday     Boolean
  open_tuesday    Boolean
  open_wednesday  Boolean
  open_thursday   Boolean
  open_friday     Boolean
  open_saturday   Boolean
  open_sunday     Boolean
  open            String
  close           String
  approved        Boolean   @default(false)
  created_at      DateTime  @default(now())
  updated_at      DateTime  @default(now())
  deleted         Boolean   @default(false)
  deleted_at      DateTime?

  @@unique(fields: [name, approved], name: "approvedEstablishment")
}

